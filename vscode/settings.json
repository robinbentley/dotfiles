// Place your settings in this file to overwrite the default settings
{
    "editor.fontSize": 15,
    "editor.renderWhitespace": "boundary",
    "editor.fontFamily": "inconsolata-g, Menlo, Monaco, 'Courier New', monospace",
    "editor.lineHeight": 32,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "explorer.openEditors.visible": 0,
    "[markdown]": {
        "files.trimTrailingWhitespace": false
    },
    "[python]": {
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
        "editor.rulers": [80,120]
    },
    "editor.tabSize": 2,
    "workbench.colorTheme": "Boxy Ocean",
    "workbench.iconTheme": "vscode-great-icons",
    "workbench.startupEditor": "none",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.lineHeight": 1.1,
    "search.exclude": {
        "**/.git": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/tmp": true,
        "**/docs": true,
        "**/vendor": true,
        "**/env": true,
        "**/cache": true
    },
    "editor.minimap.enabled": false,
    "window.zoomLevel": 0,
    "beautify.config": {
        "space_after_anon_function": false,
        "space_in_paren": false
    },
    "html.format.wrapLineLength": 0,
    "workbench.colorCustomizations": {
        "activityBar.foreground": "#b2b7ba",
        "activityBar.background": "#1a2b34",
        "sideBar.background": "#21323a",
        "statusBar.background": "#21323a",
        "statusBar.foreground": "#b2b7ba",
        "statusBar.debuggingForeground": "#ffffff",
        "titleBar.activeBackground": "#21323a",
        "editorError.foreground": "#EC5f67",
        "editorWarning.foreground": "#99C794",
        "terminal.foreground": "#c0c5ce",
        "terminal.background": "#1b2b34",
        "terminal.ansiBlack": "#1B2B34",
        "terminal.ansiWhite": "#d8dee9",
        "terminal.ansiBlue": "#6699CC",
        "terminal.ansiCyan": "#5FB3B3",
        "terminal.ansiGreen": "#99C794",
        "terminal.ansiMagenta": "#C594C5",
        "terminal.ansiYellow": "#FAC863",
        "terminal.ansiRed": "#EC5f67",
        "terminal.ansiBrightBlack": "#65737e",
        "terminal.ansiBrightWhite": "#d8dee9",
        "terminal.ansiBrightBlue": "#6699CC",
        "terminal.ansiBrightCyan": "#5FB3B3",
        "terminal.ansiBrightGreen": "#99C794",
        "terminal.ansiBrightMagenta": "#C594C5",
        "terminal.ansiBrightYellow": "#FAC863",
        "terminal.ansiBrightRed": "#EC5f67"
    },
    "files.hotExit": "off",
    "emmet.triggerExpansionOnTab": true,
    "emmet.showAbbreviationSuggestions": false,
    "emmet.showSuggestionsAsSnippets": false,
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },
    "workbench.sideBar.location": "left",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.pyc": true,
        "**/__pycache__": true
    },
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.pydocstyleEnabled": false,
    "python.formatting.provider": "autopep8",
    "python.pythonPath": "/usr/local/bin/python3",
    "editor.dragAndDrop": false,
    "workbench.activityBar.visible": true,
    "files.trimFinalNewlines": true,
    "files.defaultLanguage": "markdown",
    "workbench.editor.enablePreview": true,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "editor.scrollBeyondLastLine": false,
    "editor.colorDecorators": false,
    "color-highlight.matchWords": false,
    "color-highlight.markRuler": false,
    "color-highlight.markerType": "background",
    "workbench.panel.location": "bottom",
    "explorer.decorations.badges": false
}
